		},
		"AzureDataLakeStorageLS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://nwintechsa.dfs.core.windows.net/"
		},
		"AzureKeyVault1_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://nwintechkv.vault.azure.net/"
		},
		"SqlServerOnPremLS_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "DESKTOP-LGEL5NK\\SQLEXPRESS"
		},
		"SqlServerOnPremLS_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "AdventureWorksLT2022"
		},
		"SqlServerOnPremLS_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "luke"
		},
		"nwintech-synapse-WorkspaceDefaultStorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://nwintechsa.dfs.core.windows.net"
		},
		"AzureSqlDatabase_Gold_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "nwintech-synapse-ondemand.sql.azuresynapse.net"
		},
		"AzureSqlDatabase_Gold_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "gold_db"
		}
