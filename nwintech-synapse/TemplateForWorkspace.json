		{
			"name": "[concat(parameters('workspaceName'), '/SqlServerOnPremLS')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"annotations": [],
				"type": "SqlServer",
				"typeProperties": {
					"server": "[parameters('SqlServerOnPremLS_properties_typeProperties_server')]",
					"database": "[parameters('SqlServerOnPremLS_properties_typeProperties_database')]",
					"encrypt": "optional",
